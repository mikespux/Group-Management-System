<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.gms">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        android:hardwareAccelerated="false"
        tools:ignore="GoogleAppIndexingWarning">
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
        <activity android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SignupActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".activities.MinutesActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.SearchActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.MembersActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.ReportsActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.PaymentCardCollections"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.ContributionActivity"
            android:label="@string/app_name" />

        <activity
        android:name=".activities.ContributeActivity"
        android:label="@string/app_name" />
        <activity
            android:name=".activities.CalendarActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.EventActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.ElectionActivity"
            android:label="@string/app_name" />

        <activity
            android:name=".activities.ChatActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.NotificationActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.NotesActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.PaymentActivity"
            android:label="@string/app_name" />
    </application>

</manifest>